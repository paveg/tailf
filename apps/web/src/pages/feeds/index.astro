---
import Layout from '../../layouts/Layout.astro'
import { FeedList } from '../../components/FeedList'
import { fetchFeedsForSSG } from '../../lib/server-api'

export const prerender = true

// SSG: ビルド時に取得（SEO用）
const initialFeeds = await fetchFeedsForSSG()
---

<Layout title="フィード一覧" description="登録されている技術ブログ・スライドの一覧">
	<div class="container mx-auto px-4 py-8">
		<h1 class="mb-8 text-3xl font-bold">フィード一覧</h1>
		<FeedList client:load initialFeeds={initialFeeds} />
	</div>
</Layout>
