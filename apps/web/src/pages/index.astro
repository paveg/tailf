---
import Layout from '../layouts/Layout.astro'
import { RecentPosts } from '../components/RecentPosts'
import { Button } from '../components/ui/button'
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../components/ui/card'
import { fetchAllPostsForSSG } from '../lib/server-api'

export const prerender = true

// SSG: ビルド時に取得（SEO用）、開発環境では空になる可能性あり
const allPosts = await fetchAllPostsForSSG()
const initialPosts = allPosts.slice(0, 6)
---

<Layout title="ホーム">
	<div class="container mx-auto px-4 py-8">
		<!-- Hero Section -->
		<section class="mb-12 text-center">
			<h1 class="mb-4 font-mono text-2xl font-extrabold whitespace-nowrap sm:text-4xl md:text-5xl">
				<span class="text-primary">tail -f</span>
				<span class="text-muted-foreground"> tech blogs</span>
			</h1>
			<p class="mx-auto max-w-2xl text-sm leading-relaxed text-muted-foreground sm:text-base md:text-lg">
				<span class="block">日本の技術ブログを、もっと見つけやすく。</span>
				<span class="block">テックブログをリアルタイムで追いかけよう。</span>
			</p>
		</section>

		<!-- Posts Preview -->
		<section>
			<div class="mb-6 flex items-center justify-between">
				<h2 class="text-2xl font-bold">新着記事</h2>
				<a href="/posts" class="text-sm text-primary hover:underline">
					すべて見る →
				</a>
			</div>
			<RecentPosts client:load initialPosts={initialPosts} />
		</section>

		<!-- CTA Section -->
		<Card className="mt-12 text-center">
			<CardHeader>
				<CardTitle className="text-lg whitespace-nowrap sm:text-xl md:text-2xl">
					あなたのフィードを登録しませんか？
				</CardTitle>
				<CardDescription className="text-xs whitespace-nowrap sm:text-sm">
					RSSフィードがあれば、すぐに登録できます。
				</CardDescription>
			</CardHeader>
			<CardContent>
				<Button asChild size="lg">
					<a href="/api/auth/github" class="inline-flex items-center gap-2">
						<svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						GitHubでログイン
					</a>
				</Button>
			</CardContent>
		</Card>
	</div>
</Layout>
