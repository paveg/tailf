---
import Layout from '../../layouts/Layout.astro'
import { PostList } from '../../components/PostList'
import { fetchAllPostsForSSG } from '../../lib/server-api'

// Fetch all posts at build time
const allPosts = await fetchAllPostsForSSG()
---

<Layout title="記事一覧" description="日本の技術ブログの記事一覧">
	<div class="container mx-auto px-4 py-8">
		<h1 class="mb-8 text-3xl font-bold">記事一覧</h1>
		<PostList client:load allPosts={allPosts} />
	</div>
</Layout>
